<h2>Listing All Planets</h2>
<table>
	<tr>
		<th>Name</th>
		<th>Position</th>
		<th>Orbital Speed</th>
		<th>Mass</th>
		<th>Volume</th>
		<th></th>
	</tr>
	
	<% @planets.each do |planet| %>
	
	<tr>
		<td><%= planet.name %></td>
		<td><%= planet.position %></td>
		<td><%= planet.orbital_speed %></td>
		<td><%= planet.mass %></td>
		<td><%= planet.volume %></td>
		<td>
			<%= link_to "Show", planet_path(planet) %>
			<%= link_to "Edit", edit_planet_path(planet) %>
			<%= link_to "Destroy"  %>
		</td>

	</tr>

	<% end %>

</table>
<br />
<%= link_to "New Planet", new_planet_path %>