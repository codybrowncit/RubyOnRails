<% if @rating.errors.any? %>
<p>
  rating could not be saveded:
  <ul>
    <% @rating.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</p>  
<% end %>

<%= form_for(@rating) do |form| %>
<p>
	<%= form.label :rating_number %><br />
	<%= form.text_field :rating_number %>
</p>
<p>
	<%= form.label :tradition %><br />
	<%= form.collection_select :tradition_id, Tradition.all, :id, :name %>
</p>
<p>
	<%= form.label :user %><br />
	<%= form.collection_select :user_id, User.all, :id, :name %>
</p>
<p>
	<%= form.submit class:"btn btn-default"%>
</p>

<% end %>